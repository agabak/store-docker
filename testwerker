box: microsoft/dotnet:2.2-sdk
build: 
 step:
  -script:
    name: restore
    code: |
      dotnet restore
  -script:
    name: build
    code: |
     dotnet build
  -script:
    name: publish
    code: |
     dotnet publish -o publish
  -script:
    name: copy binary
    code: |
      cp -r .$WERCKER_OUTPUT_DIR/app
      cd  $WERCKER_OUTPUT_DIR/app

  deploy:
    steps:
      - internal/docker-push:
